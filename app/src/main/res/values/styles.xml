<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="medium_text">
        <item name="android:fontFamily">@font/akkuratllgrk_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight" tools:targetApi="p">28sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="small_text">
        <item name="android:fontFamily">@font/akkuratllgrk_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="small_text_grey">
        <item name="android:fontFamily">@font/akkuratllgrk_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">#949494</item>
    </style>

    <style name="small_text_caps">
        <item name="android:fontFamily">@font/akkuratllgrk_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>